{
  "name": "servipag",
  "version": "0.1.0",
  "description": "complemento para sevicio web de servipag",
  "main": "lib",
  "scripts": {
    "prepublish": "npm run build -s",
    "prebuild": "npm run lint -s && npm run clean -s",
    "build": "babel src --out-dir lib --source-maps",
    "lint": "eslint src",
    "clean": "rimraf lib",
    "pretest": "npm run build -s",
    "test": "mocha --compilers js:babel-core/register"
  },
  "engines": {
    "node": ">=0.12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Aarturo/servipag.git"
  },
  "keywords": [
    "servipag",
    "payment",
    "online"
  ],
  "author": "Arturo Castillo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Aarturo/servipag/issues"
  },
  "homepage": "https://github.com/Aarturo/servipag#readme",
  "dependencies": {
    "async": "^2.0.1",
    "lodash": "^4.14.1",
    "ursa": "^0.9.4",
    "xml2js": "^0.4.17"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.13.1",
    "babel-preset-es2015": "^6.9.0",
    "chai": "^3.5.0",
    "eslint": "3.2.2",
    "mocha": "^3.0.1",
    "rimraf": "^2.5.4"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        2,
        2
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "quotes": [
        2,
        "single"
      ],
      "semi": [
        2,
        "always"
      ]
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
